/* Calcular o consumo médio de um automovel (medido em km/l), dado que sao conhecidos a d total percorrida e o 
volume do combustivel consumido para percorrê-la */
var dist, combust, consum;
dist = parseInt(prompt("Insira a distância total percorrida"));
combust = parseFloat(prompt("Insira combustível consumido durante o trajeto"));
consum = dist/combust;
alert("O consumo médio foi de: " + consum.toFixed(1) + " km/l");

//*************************************************************************
/* construa um programa para pogamento para comissao de vendedores de peças, levando se em consideraçao que sua comissao sera
de 5% do valor da vendas e que vc tem os seguintes dados:
identificacao do vendedor
codigo da peca
preco unitario da peca
qntd vendida */
var comis, nome, code, precoUni, qntVend;
nome = prompt("Insira o nome do vendedor");
code = parseInt(prompt("Insira o codigo da peca"));
precoUni = parseFloat(prompt("Insira o preco unitario da peca"));
qntVend = parseInt(prompt("Insira a quantidade de pecas vendidas"));
comis = precoUni*qntVend*0.05;
alert("A comissão é de R$" + comis.toFixed(2));
console.log(comis+" "+nome+" "+code+" "+precoUni+" "+qntVend)

